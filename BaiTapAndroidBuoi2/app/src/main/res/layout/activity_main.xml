<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="10"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ShowOperator"
                android:textColor="@color/white"
                android:text=""
                android:layout_centerInParent="true"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/ShowAnswer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/white"
                android:textSize="30sp">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonC"
                    android:textSize="30sp"
                    android:text="C"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonDEL"
                    android:textSize="30sp"
                    android:text="DEL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonDivide"
                    android:textSize="50sp"
                    android:text="/"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button7"
                    android:textSize="50sp"
                    android:text="7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button8"
                    android:textSize="50sp"
                    android:text="8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button9"
                    android:textSize="50sp"
                    android:text="9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonMultiply"
                    android:textSize="50sp"
                    android:text="*"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button4"
                    android:textSize="50sp"
                    android:text="4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button5"
                    android:textSize="50sp"
                    android:text="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button6"
                    android:textSize="50sp"
                    android:text="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonMinus"
                    android:textSize="50sp"
                    android:text="-"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button1"
                    android:textSize="50sp"
                    android:text="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button2"
                    android:textSize="50sp"
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button3"
                    android:textSize="50sp"
                    android:text="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonPlus"
                    android:textSize="50sp"
                    android:text="+"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/DoiDau"
                    android:textSize="30sp"
                    android:text="+/-"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/Button0"
                    android:textSize="50sp"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonFloat"
                    android:textSize="50sp"
                    android:text="."
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/ButtonEquals"
                    android:textSize="50sp"
                    android:text="="
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>